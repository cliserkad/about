---
interface Props {
	title: string;
}

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{frontmatter.title}</title>
		<meta name="description" content={frontmatter.title} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={frontmatter.title} />
		<meta property="og:image" content="/favicon.svg" />
		<meta property="og:description" content={frontmatter.title} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/favicon.svg">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	a {
		color: white;
		text-decoration: underline;
	}
	img {
		margin-bottom: 0.4rem;
	}
	body {
		align-items: center;
		padding: 0;
		margin: 0;
		min-height: 100%;
		width: 100%;
	}
	#heading-container {
		font-size: 1em;
		container-name: sidebar;
		container-type: inline-size;
		max-width: 100vw;
	}
	#cliserkad-name {
		background-image:radial-gradient(100% 100% at 0% 0%, #c85c46 11%, rgba(206, 73, 66, 0.75) 33.25%, rgba(201, 63, 77, 0.5) 55.5%, rgba(177, 56, 94, 0) 100%), linear-gradient(0deg, #8a2d63 0%, #a5407b 37%, #410c22 100%);
		color: transparent;
		background-clip: text;
		width: min-content;
		height: min-content;
		margin: auto;
		padding: 0;
		font-size: 5rem;
	}
	@container sidebar (min-width: 50rem) {
		#cliserkad-name {
			font-size: 10rem;
		}
	}
	html, root {
		font-family: system-ui, sans-serif;
		background: #3a3a3a;
		/* white to black linear noise gradient spanning from top to bottom */
		background:
			linear-gradient(rgba(0,0,0,.69), rgba(0,0,0,.69)),
			url('/noise.svg');
		color: white;
		text-align: center;
		min-height: 100%;
		width: 100%;
		padding: 0;
		margin: 0;
	}
	code {
		font-family: monospace, monospace;
	}
</style>
